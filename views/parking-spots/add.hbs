<div class="add-edit">
  <h1>Post your parking spot</h1>

  <br />

  <form class="add-edit-form" action="/parking-spots/add" method="POST">
    <label for="name">Post title: </label>
    <input type="text" name="name" id="name" />
    <br />
    <label for="description">Description: </label>
    <input type="text" name="description" id="description" />
    {{! <textarea name="description" id="description" cols="30" rows="10"></textarea> }}
    <br />
    <br />

    <p><u>Address:</u></p>
    <label for="street">Street address: </label>
    <input type="text" name="streetAddress" id="street" />
    <br />
    <label for="city">City: </label>
    <input type="text" name="city" id="city" />
    <br />
    <label for="state">State: </label>
    <input type="text" name="state" id="state" />
    <br />
    <label for="zip">Zip code: </label>
    <input type="text" name="zipCode" id="zip" />
    <br />
    <label for="country">Country: </label>
    <input type="text" name="country" id="country" />

    <br />
    <br />

    <label for="type">Type: </label>
    <select name="type" id="type">
      <option value="Driveway">Driveway</option>
      <option value="Street">Street</option>
      <option value="Parking lot">Parking lot</option>
      <option value="Garage">Garage</option>
    </select>

    <br />

    <label for="size">Size: </label>
    <select name="size" id="size">
      <option value="Compact">Compact</option>
      <option value="Midsized">Midsized</option>
      <option value="Large">Large</option>
    </select>

    <br />
    <br />

    <label for="avail-start-date">Available from:</label>
    <input type="date" id="avail-start-date" name="startDate" />

    <label for="avail-start-time">at:</label>
    <input type="time" id="avail-start-time" name="startTime" />

    <br />

    <label for="avail-end-date">Available to:</label>
    <input type="date" id="avail-end-date" name="endDate" />

    <label for="avail-end-time">at:</label>
    <input type="time" id="avail-end-time" name="endTime" />

    <br />
    <br />

    <label for="price">Price / hour (USD): </label>
    <input type="number" name="price" id="price" />

    <br />
    <br />

    <button type="submit">Submit</button>
  </form>

  <a class="footer-links" href="/">Home</a>
</div>